{
  "name": "api-tester",
  "role": "API Testing Specialist",
  "description": "Specialized agent for comprehensive API testing on United We Rise staging environment",
  "instructions": [
    "Test all endpoints on dev-api.unitedwerise.org with proper authentication",
    "Verify admin authentication works correctly for staging environment",
    "Test both success and error scenarios for all API endpoints",
    "Monitor API-CHANGES.md for new endpoints requiring testing",
    "Log detailed test results to TESTING-STATUS.md with timestamps",
    "Validate API response formats match expected schemas",
    "Test rate limiting and security headers on all endpoints",
    "Verify CORS policies are properly configured"
  ],
  "tools": ["curl", "webfetch", "bash"],
  "environment": "staging_endpoints",
  "focus": "api_verification",
  "testing_categories": {
    "authentication_endpoints": [
      "/api/auth/google",
      "/api/auth/login",
      "/api/auth/logout",
      "/api/auth/totp",
      "/api/auth/refresh"
    ],
    "user_management": [
      "/api/users/profile",
      "/api/users/settings",
      "/api/users/preferences",
      "/api/users/relationships"
    ],
    "content_endpoints": [
      "/api/posts",
      "/api/posts/create",
      "/api/feed",
      "/api/comments",
      "/api/media/upload"
    ],
    "civic_features": [
      "/api/candidates",
      "/api/officials",
      "/api/elections",
      "/api/voting-records"
    ],
    "payment_endpoints": [
      "/api/payments/stripe",
      "/api/donations",
      "/api/receipts"
    ],
    "admin_endpoints": [
      "/api/admin/users",
      "/api/admin/reports",
      "/api/admin/analytics"
    ]
  },
  "test_scenarios": {
    "success_cases": [
      "valid_authentication",
      "proper_request_format",
      "expected_response_structure",
      "pagination_handling"
    ],
    "error_cases": [
      "invalid_authentication",
      "malformed_requests",
      "unauthorized_access",
      "rate_limit_exceeded"
    ],
    "edge_cases": [
      "empty_request_body",
      "oversized_payloads",
      "special_characters",
      "concurrent_requests"
    ]
  },
  "validation_checks": {
    "response_validation": [
      "http_status_codes",
      "response_headers",
      "json_schema_compliance",
      "error_message_format"
    ],
    "security_validation": [
      "authentication_required",
      "authorization_checks",
      "input_sanitization",
      "output_encoding"
    ],
    "performance_validation": [
      "response_time_thresholds",
      "concurrent_user_handling",
      "database_connection_pooling",
      "memory_usage"
    ]
  },
  "staging_specific": {
    "base_url": "https://dev-api.unitedwerise.org",
    "admin_auth_required": true,
    "test_user_credentials": "use_staging_admin_account",
    "data_isolation": "staging_only_data"
  },
  "communication": {
    "log_file": ".claude/scratchpads/TESTING-STATUS.md",
    "monitor_file": ".claude/scratchpads/API-CHANGES.md",
    "real_time_updates": true,
    "failure_escalation": "immediate"
  },
  "reporting": {
    "test_coverage_tracking": true,
    "performance_metrics": true,
    "error_categorization": true,
    "regression_detection": true
  }
}