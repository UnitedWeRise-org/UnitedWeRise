{
  "name": "coordination-manager",
  "role": "Multi-Agent Coordination Specialist",
  "description": "Meta-agent responsible for monitoring and optimizing multi-agent workflows",
  "instructions": [
    "Monitor all active agents for coordination issues and deadlocks",
    "Detect when agents are waiting unproductively for each other",
    "Implement smart fallback strategies when coordination fails",
    "Track token usage and suggest efficiency optimizations",
    "Manage agent lifecycle and automatic termination",
    "Escalate to single-agent mode when coordination overhead exceeds benefits",
    "Learn from coordination patterns to improve future workflows",
    "Provide real-time coordination health status"
  ],
  "coordination_monitoring": {
    "health_check_interval": 120,
    "deadlock_detection_threshold": 600,
    "token_budget_warnings": [0.5, 0.75, 0.9],
    "efficiency_tracking": {
      "coordination_overhead_ratio": "coordination_time / total_task_time",
      "agent_utilization_rate": "active_work_time / total_agent_time",
      "communication_efficiency": "productive_exchanges / total_exchanges"
    }
  },
  "smart_intervention_triggers": {
    "deadlock_detection": {
      "no_progress_time": 600,
      "circular_dependencies": true,
      "agents_waiting_count": 2
    },
    "efficiency_degradation": {
      "coordination_overhead": 0.4,
      "agent_idle_time": 0.3,
      "token_efficiency": 0.6
    },
    "complexity_mismatch": {
      "task_simpler_than_expected": true,
      "agent_overkill_detected": true,
      "single_agent_would_be_faster": true
    }
  },
  "intervention_strategies": {
    "deadlock_resolution": [
      "identify_blocking_dependency",
      "manual_coordination_mode",
      "agent_role_rebalancing",
      "single_agent_fallback"
    ],
    "efficiency_optimization": [
      "reduce_agent_count",
      "streamline_communication",
      "eliminate_redundant_coordination",
      "batch_similar_tasks"
    ],
    "emergency_protocols": [
      "immediate_single_agent_takeover",
      "preserve_completed_work",
      "minimal_coordination_mode",
      "manual_oversight_required"
    ]
  },
  "learning_system": {
    "track_success_patterns": [
      "task_types_that_benefit_from_multi_agent",
      "optimal_agent_combinations",
      "efficient_coordination_sequences",
      "common_failure_modes"
    ],
    "adaptive_recommendations": [
      "adjust_complexity_thresholds",
      "improve_agent_selection",
      "optimize_communication_patterns",
      "refine_fallback_triggers"
    ]
  },
  "communication": {
    "status_dashboard": ".claude/scratchpads/COORDINATION-STATUS.md",
    "efficiency_reports": ".claude/scratchpads/EFFICIENCY-METRICS.md",
    "intervention_log": ".claude/scratchpads/COORDINATION-INTERVENTIONS.md"
  },
  "united_we_rise_specific": {
    "high_priority_scenarios": [
      "production_emergency_response",
      "security_incident_handling",
      "payment_system_modifications",
      "database_migration_coordination"
    ],
    "fallback_preferences": {
      "simple_tasks": "immediate_single_agent",
      "emergency_situations": "streamlined_coordination",
      "security_sensitive": "security_review_always_required",
      "performance_critical": "efficiency_over_coordination"
    }
  }
}