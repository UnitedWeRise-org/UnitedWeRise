/// Organization entity for groups, advocacy orgs, parties, etc.
/// @description Core organization model supporting hierarchical structure,
/// membership management, endorsements, and civic engagement features.
model Organization {
  /// Unique identifier for the organization
  id          String  @id @default(cuid())
  /// Organization display name
  name        String
  /// URL-friendly unique identifier
  slug        String  @unique
  /// Organization description/about text
  description String?
  /// Avatar/logo image URL
  avatar      String?
  /// Organization website URL
  website     String?

  // Hierarchy
  /// Parent organization ID (null = top-level organization)
  parentId String?
  /// Parent organization relationship
  parent   Organization?  @relation("OrgHierarchy", fields: [parentId], references: [id], onDelete: SetNull)
  /// Child organizations
  children Organization[] @relation("OrgHierarchy")

  // Leadership (required, exactly one head)
  /// User ID of the organization head
  headUserId String
  /// Organization head user relationship
  head       User   @relation("OrgHead", fields: [headUserId], references: [id], onDelete: Restrict)

  // Jurisdiction (optional)
  /// Type of jurisdiction (NATIONAL, STATE, COUNTY, CITY, CUSTOM)
  jurisdictionType  JurisdictionType?
  /// Jurisdiction value (e.g., "TX", "Travis County, TX", "Austin, TX")
  jurisdictionValue String?
  /// H3 cell indices covering the jurisdiction area
  h3Cells           String[]          @default([])

  // Endorsement settings
  /// Whether endorsements are enabled for this organization
  endorsementsEnabled  Boolean             @default(false)
  /// Voting threshold type for endorsement decisions
  votingThresholdType  VotingThresholdType @default(SIMPLE_MAJORITY)
  /// Custom voting threshold percentage (for PERCENTAGE type)
  votingThresholdValue Int?
  /// Minimum participation percentage for quorum (0 = no quorum required)
  votingQuorumPercent  Int                 @default(0)

  // Verification
  /// Whether organization has been verified by platform
  isVerified            Boolean               @default(false)
  /// Organization verification status
  verificationStatus    OrgVerificationStatus @default(NOT_REQUESTED)
  /// Verification document URLs
  verificationDocuments String[]              @default([])
  /// Timestamp when organization was verified
  verifiedAt            DateTime?
  /// Admin user ID who verified the organization
  verifiedBy            String?

  // Metadata
  /// Whether organization is active (not dissolved)
  isActive  Boolean  @default(true)
  /// Organization creation timestamp
  createdAt DateTime @default(now())
  /// Last update timestamp
  updatedAt DateTime @updatedAt

  // Relations
  members               OrganizationMember[]
  roles                 OrganizationRole[]
  affiliationsFrom      OrganizationAffiliation[]         @relation("AffiliationFrom")
  affiliationsTo        OrganizationAffiliation[]         @relation("AffiliationTo")
  mergeRequestsSent     OrganizationMergeRequest[]        @relation("MergeRequestFrom")
  mergeRequestsReceived OrganizationMergeRequest[]        @relation("MergeRequestTo")
  questionnaires        EndorsementQuestionnaire[]
  orgEndorsements       OrganizationEndorsement[]
  posts                 Post[]                            @relation("OrgPosts")
  events                CivicEvent[]                      @relation("OrgEvents")
  followers             OrganizationFollow[]
  discussions           OrganizationDiscussion[]
  verificationRequests  OrganizationVerificationRequest[]

  @@index([parentId])
  @@index([headUserId])
  @@index([jurisdictionType, jurisdictionValue])
  @@index([isActive])
  @@index([slug])
}

/// Organization membership record
/// @description Tracks user membership in organizations with role assignments and status.
model OrganizationMember {
  /// Unique identifier for this membership
  id String @id @default(cuid())

  /// Organization ID
  organizationId String
  /// Organization relationship
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  /// User ID of the member
  userId String
  /// User relationship
  user   User   @relation("OrgMemberships", fields: [userId], references: [id], onDelete: Cascade)

  /// Role assignment (nullable = regular member with no special role)
  roleId String?
  /// Role relationship
  role   OrganizationRole? @relation(fields: [roleId], references: [id], onDelete: SetNull)

  /// Membership status
  status    MembershipStatus @default(PENDING)
  /// Timestamp when membership was approved
  joinedAt  DateTime?
  /// User ID who invited this member (null = self-request)
  invitedBy String?

  /// Membership creation timestamp
  createdAt DateTime @default(now())
  /// Last update timestamp
  updatedAt DateTime @updatedAt

  // Relations
  endorsementVotes EndorsementVote[]

  @@unique([organizationId, userId])
  @@index([userId])
  @@index([organizationId, status])
  @@index([roleId])
}

/// Organization role definition
/// @description Defines custom roles within an organization with assigned capabilities.
model OrganizationRole {
  /// Unique identifier for this role
  id String @id @default(cuid())

  /// Organization ID
  organizationId String
  /// Organization relationship
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  /// Role display name (e.g., "Co-Chair", "Electoral Committee Lead")
  name        String
  /// Role description
  description String?

  /// Capabilities granted to this role
  capabilities OrgCapability[]

  /// Maximum number of users who can hold this role (null = unlimited)
  maxHolders Int @default(1)

  /// Role creation timestamp
  createdAt DateTime @default(now())
  /// Last update timestamp
  updatedAt DateTime @updatedAt

  /// Members assigned to this role
  members OrganizationMember[]

  @@unique([organizationId, name])
  @@index([organizationId])
}

/// Organization follow relationship
/// @description Tracks users following organizations for feed updates.
model OrganizationFollow {
  /// Unique identifier for this follow
  id String @id @default(cuid())

  /// Organization ID being followed
  organizationId String
  /// Organization relationship
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  /// User ID of the follower
  userId String
  /// User relationship
  user   User   @relation("OrgFollows", fields: [userId], references: [id], onDelete: Cascade)

  /// Follow creation timestamp
  createdAt DateTime @default(now())

  @@unique([organizationId, userId])
  @@index([userId])
  @@index([organizationId])
}

/// Organization affiliation (non-hierarchical partnership)
/// @description Tracks partnerships between organizations without parent-child hierarchy.
model OrganizationAffiliation {
  /// Unique identifier for this affiliation
  id String @id @default(cuid())

  /// Proposing organization ID
  fromOrgId String
  /// Proposing organization relationship
  fromOrg   Organization @relation("AffiliationFrom", fields: [fromOrgId], references: [id], onDelete: Cascade)

  /// Target organization ID
  toOrgId String
  /// Target organization relationship
  toOrg   Organization @relation("AffiliationTo", fields: [toOrgId], references: [id], onDelete: Cascade)

  /// Affiliation status
  status AffiliationStatus @default(PENDING)

  /// User ID who proposed the affiliation
  proposedBy String
  /// User ID who approved the affiliation
  approvedBy String?
  /// User ID who revoked the affiliation
  revokedBy  String?

  /// Affiliation creation timestamp
  createdAt  DateTime  @default(now())
  /// Approval timestamp
  approvedAt DateTime?
  /// Revocation timestamp
  revokedAt  DateTime?

  @@unique([fromOrgId, toOrgId])
  @@index([toOrgId, status])
}

/// Organization merge request
/// @description Tracks requests for one organization to absorb another.
model OrganizationMergeRequest {
  /// Unique identifier for this merge request
  id String @id @default(cuid())

  /// Organization being absorbed
  fromOrgId String
  /// Organization being absorbed relationship
  fromOrg   Organization @relation("MergeRequestFrom", fields: [fromOrgId], references: [id], onDelete: Cascade)

  /// Organization absorbing
  toOrgId String
  /// Organization absorbing relationship
  toOrg   Organization @relation("MergeRequestTo", fields: [toOrgId], references: [id], onDelete: Cascade)

  /// Proposed parent organization ID (null = becomes direct child of toOrg)
  proposedParentId String?

  /// Merge request status
  status MergeRequestStatus @default(PENDING)

  /// Capabilities the absorbed org will retain
  retainedCapabilities OrgCapability[]

  /// User ID who initiated the merge (from toOrg)
  initiatedBy String
  /// User ID who accepted the merge (head of fromOrg)
  acceptedBy  String?

  /// Request creation timestamp
  createdAt   DateTime  @default(now())
  /// Acceptance timestamp
  acceptedAt  DateTime?
  /// Completion timestamp
  completedAt DateTime?

  @@index([fromOrgId])
  @@index([toOrgId, status])
}

