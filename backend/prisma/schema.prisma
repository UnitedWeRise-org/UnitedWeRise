  @@index([userId]) /// Fast lookup of all videos by user
  @@index([postId]) /// Fast lookup of videos attached to post
  @@index([videoType]) /// Filter reels vs post attachments
  @@index([encodingStatus]) /// Encoding job monitoring
  @@index([moderationStatus]) /// Admin moderation queue filtering
  @@index([publishStatus]) /// Draft/scheduled/published filtering
  @@index([scheduledPublishAt]) /// Cron job for scheduled publishing
