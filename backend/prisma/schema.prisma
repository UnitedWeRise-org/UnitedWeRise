/// Endorsement questionnaire for candidates seeking organization endorsement
/// @description Organizations create questionnaires that candidates fill out to seek endorsement.
model EndorsementQuestionnaire {
  /// Unique identifier for this questionnaire
  id String @id @default(cuid())

  /// Organization ID that created this questionnaire
  organizationId String
  /// Organization relationship
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  /// Questionnaire title (e.g., "2024 Endorsement Questionnaire")
  title       String
  /// Questionnaire description/instructions
  description String?
  /// Whether questionnaire is accepting applications
  isActive    Boolean @default(true)

  /// Questionnaire creation timestamp
  createdAt DateTime @default(now())
  /// Last update timestamp
  updatedAt DateTime @updatedAt
  /// User ID who created the questionnaire
  createdBy String

  /// Questions in this questionnaire
  questions    QuestionnaireQuestion[]
  /// Applications submitted to this questionnaire
  applications EndorsementApplication[]

  @@index([organizationId, isActive])
}

/// Question within an endorsement questionnaire
/// @description Individual questions that candidates must answer.
model QuestionnaireQuestion {
  /// Unique identifier for this question
  id String @id @default(cuid())

  /// Questionnaire ID
  questionnaireId String
  /// Questionnaire relationship
  questionnaire   EndorsementQuestionnaire @relation(fields: [questionnaireId], references: [id], onDelete: Cascade)

  /// Question text
  text         String
  /// Help text/description for the question
  description  String?
  /// Question type (SHORT_TEXT, LONG_TEXT, MULTIPLE_CHOICE, etc.)
  type         QuestionType
  /// Options for MULTIPLE_CHOICE and CHECKBOX types (JSON array)
  options      String[]     @default([])
  /// Whether response is required
  isRequired   Boolean      @default(true)
  /// Display order (lower = earlier)
  displayOrder Int

  /// Whether response should be shown on candidate's public page
  isPublic Boolean @default(true)

  /// Responses to this question
  responses QuestionResponse[]

  @@index([questionnaireId, displayOrder])
}

/// Candidate's response to a questionnaire question
/// @description Stores the candidate's answer to each question.
model QuestionResponse {
  /// Unique identifier for this response
  id String @id @default(cuid())

  /// Application ID
  applicationId String
  /// Application relationship
  application   EndorsementApplication @relation(fields: [applicationId], references: [id], onDelete: Cascade)

  /// Question ID
  questionId String
  /// Question relationship
  question   QuestionnaireQuestion @relation(fields: [questionId], references: [id], onDelete: Cascade)

  /// Response content (JSON for complex types)
  response String

  @@unique([applicationId, questionId])
}

/// Candidate's endorsement application to an organization
/// @description Tracks a candidate's application for endorsement including voting.
model EndorsementApplication {
  /// Unique identifier for this application
  id String @id @default(cuid())

  /// Questionnaire ID
  questionnaireId String
  /// Questionnaire relationship
  questionnaire   EndorsementQuestionnaire @relation(fields: [questionnaireId], references: [id], onDelete: Cascade)

  /// Candidate ID applying for endorsement
  candidateId String
  /// Candidate relationship
  candidate   Candidate @relation("OrgEndorsementApplications", fields: [candidateId], references: [id], onDelete: Cascade)

  /// Application status
  status EndorsementApplicationStatus @default(SUBMITTED)

  /// Submission timestamp
  submittedAt DateTime  @default(now())
  /// Review completion timestamp
  reviewedAt  DateTime?

  /// Cached vote counts (denormalized for performance)
  votesFor     Int @default(0)
  votesAgainst Int @default(0)
  votesAbstain Int @default(0)

  /// Responses to questionnaire questions
  responses      QuestionResponse[]
  /// Individual member votes
  votes          EndorsementVote[]
  /// Published endorsement (if approved)
  orgEndorsement OrganizationEndorsement?

  @@unique([questionnaireId, candidateId])
  @@index([questionnaireId, status])
  @@index([candidateId])
}

/// Individual member vote on an endorsement application
/// @description Tracks each member's vote on whether to endorse a candidate.
model EndorsementVote {
  /// Unique identifier for this vote
  id String @id @default(cuid())

  /// Application ID being voted on
  applicationId String
  /// Application relationship
  application   EndorsementApplication @relation(fields: [applicationId], references: [id], onDelete: Cascade)

  /// Member ID casting the vote
  memberId String
  /// Member relationship
  member   OrganizationMember @relation(fields: [memberId], references: [id], onDelete: Cascade)

  /// Vote choice (FOR, AGAINST, ABSTAIN)
  vote    EndorsementVoteChoice
  /// Optional internal comment/note
  comment String?

  /// Vote timestamp
  createdAt DateTime @default(now())

  @@unique([applicationId, memberId])
  @@index([applicationId])
}

/// Published organization endorsement of a candidate
/// @description Represents an official endorsement after approval.
model OrganizationEndorsement {
  /// Unique identifier for this endorsement
  id String @id @default(cuid())

  /// Organization ID making the endorsement
  organizationId String
  /// Organization relationship
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  /// Candidate ID being endorsed
  candidateId String
  /// Candidate relationship
  candidate   Candidate @relation("OrgEndorsementsReceived", fields: [candidateId], references: [id], onDelete: Cascade)

  /// Application ID this endorsement originated from
  applicationId String                 @unique
  /// Application relationship
  application   EndorsementApplication @relation(fields: [applicationId], references: [id], onDelete: Cascade)

  /// Public endorsement statement
  statement String?

  /// Publication timestamp
  publishedAt DateTime @default(now())
  /// User ID who published the endorsement
  publishedBy String

  /// Whether endorsement is currently active
  isActive         Boolean   @default(true)
  /// Revocation timestamp
  revokedAt        DateTime?
  /// User ID who revoked the endorsement
  revokedBy        String?
  /// Reason for revocation
  revocationReason String?

  @@index([organizationId, isActive])
  @@index([candidateId, isActive])
}

// ============================================================================
// ORGANIZATION DISCUSSION MODELS
// ============================================================================

/// Organization internal discussion thread
/// @description Internal discussions visible only to organization members.
model OrganizationDiscussion {
  /// Unique identifier for this discussion
  id String @id @default(cuid())

  /// Organization ID
  organizationId String
  /// Organization relationship
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  /// Discussion title
  title   String
  /// Initial discussion content
  content String

  /// Who can see this discussion
  visibility DiscussionVisibility @default(ALL_MEMBERS)

  /// Whether discussion is pinned to top
  isPinned Boolean   @default(false)
  /// Pinned timestamp
  pinnedAt DateTime?
  /// User ID who pinned the discussion
  pinnedBy String?

  /// Author user ID
  authorId String
  /// Author relationship
  author   User   @relation("OrgDiscussionAuthor", fields: [authorId], references: [id], onDelete: Cascade)

  /// Discussion creation timestamp
  createdAt DateTime @default(now())
  /// Last update timestamp
  updatedAt DateTime @updatedAt

  /// Replies to this discussion
  replies DiscussionReply[]

  @@index([organizationId, isPinned, createdAt])
  @@index([authorId])
}

/// Reply to an organization discussion
/// @description Supports threaded replies with parent-child relationships.
model DiscussionReply {
  /// Unique identifier for this reply
  id String @id @default(cuid())

  /// Discussion ID
  discussionId String
  /// Discussion relationship
  discussion   OrganizationDiscussion @relation(fields: [discussionId], references: [id], onDelete: Cascade)

  /// Reply content
  content String

  /// Parent reply ID for threaded replies (null = direct reply to discussion)
  parentReplyId String?
  /// Parent reply relationship
  parentReply   DiscussionReply?  @relation("ReplyThread", fields: [parentReplyId], references: [id], onDelete: Cascade)
  /// Child replies
  childReplies  DiscussionReply[] @relation("ReplyThread")

  /// Author user ID
  authorId String
  /// Author relationship
  author   User   @relation("DiscussionReplyAuthor", fields: [authorId], references: [id], onDelete: Cascade)

  /// Reply creation timestamp
  createdAt DateTime @default(now())
  /// Last update timestamp
  updatedAt DateTime @updatedAt

  @@index([discussionId, createdAt])
  @@index([parentReplyId])
  @@index([authorId])
}

// ============================================================================
// ORGANIZATION VERIFICATION MODELS
// ============================================================================

/// Organization verification request
/// @description Tracks requests for platform verification of organizations.
model OrganizationVerificationRequest {
  /// Unique identifier for this request
  id String @id @default(cuid())

  /// Organization ID requesting verification
  organizationId String
  /// Organization relationship
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  /// Type of organization
  orgType OrgType

  /// Supporting documentation URLs
  documents String[] @default([])
  /// Statement explaining why org should be verified
  statement String

  /// Verification request status
  status       OrgVerificationStatus @default(PENDING)
  /// Admin user ID who reviewed the request
  reviewedBy   String?
  /// Review timestamp
  reviewedAt   DateTime?
  /// Admin review notes (internal)
  reviewNotes  String?
  /// Reason for denial (if denied)
  denialReason String?

  /// Request creation timestamp
  createdAt DateTime @default(now())

  @@index([status])
  @@index([organizationId])
}
