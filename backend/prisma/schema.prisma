model PolicyPosition {
  id                String             @id @default(cuid())
  candidateId       String
  categoryId        String
  title             String
  summary           String             // Short summary for comparison view
  content           String             // Full detailed position
  stance            PolicyStance?
  priority          Int                @default(5) // 1-10 scale
  evidenceLinks     String[]           @default([])
  keyPoints         String[]           @default([])
  embedding         Float[]            @default([])
  isPublished       Boolean            @default(false)
  publishedAt       DateTime?
  version           Int                @default(1)
  previousVersionId String?
  createdAt         DateTime           @default(now())
  updatedAt         DateTime           @updatedAt
  
  // AI-extracted fields (Sept 2, 2025)
  aiExtractedKeywords String[]        @default([])
  aiExtractedCategory String?         // AI-determined category
  aiExtractedStance   String?         // AI-determined stance
  aiGeneratedSummary  String?         // AI-generated summary if not provided
  aiProcessedAt       DateTime?       // When AI processing was completed
  
  candidate         Candidate          @relation(fields: [candidateId], references: [id], onDelete: Cascade)
  category          PolicyCategory     @relation(fields: [categoryId], references: [id])
  previousVersion   PolicyPosition?    @relation("PolicyVersions", fields: [previousVersionId], references: [id])
  versions          PolicyPosition[]   @relation("PolicyVersions")
  
  comparisons1      PolicyComparison[] @relation("Position1")
  comparisons2      PolicyComparison[] @relation("Position2")

  @@index([candidateId])
  @@index([categoryId])
  @@index([isPublished])
  @@index([priority])
  @@unique([candidateId, categoryId, version])
