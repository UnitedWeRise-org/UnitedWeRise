# Database
DATABASE_URL="postgresql://username:password@localhost:5432/unitedwerise?schema=public"

# JWT Configuration
JWT_SECRET="your-super-secure-random-jwt-secret-min-32-characters"
JWT_EXPIRES_IN="7d"

# API Keys
GEOCODIO_API_KEY="your-geocodio-api-key"
FEC_API_KEY="your-fec-api-key"

# Server Configuration
PORT=3001
NODE_ENV="development"

# CORS Configuration
FRONTEND_URL="http://localhost:3000"
ALLOWED_ORIGINS="http://localhost:3000,https://yourdomain.com"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
BCRYPT_SALT_ROUNDS=12

# Email Service (choose one)
# Option 1: SMTP (Gmail, Outlook, etc.)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
SMTP_FROM="United We Rise <noreply@yourdomain.com>"

# Option 2: SendGrid
SENDGRID_API_KEY="your-sendgrid-api-key"

# Option 3: AWS SES
AWS_SES_REGION="us-east-1"
AWS_SES_ACCESS_KEY="your-aws-access-key"
AWS_SES_SECRET_KEY="your-aws-secret-key"

# Phone/SMS Service
TWILIO_ACCOUNT_SID="your-twilio-account-sid"
TWILIO_AUTH_TOKEN="your-twilio-auth-token"
TWILIO_PHONE_NUMBER="+1234567890"

# hCaptcha
HCAPTCHA_SECRET_KEY="your-hcaptcha-secret-key"

# Verification Settings
EMAIL_VERIFY_TOKEN_EXPIRY="24h"
PHONE_VERIFY_CODE_EXPIRY="10m"